!!! 5
%html{lang: 'en'}
  %head
    %title= yield :title
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    = csrf_meta_tags
    = stylesheet_link_tag :application, media: 'all'
    = javascript_include_tag :application, 'data-turbolinks-track' => true
    = favicon_link_tag 'favicon.ico'
    = yield :head

  %body
    = section :header
    .content
      - unless notice.blank?
        %p.notice= notice
      - unless alert.blank?
        %p.alert= alert
      = yield

  = yield :js
